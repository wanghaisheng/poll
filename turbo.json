{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "@poll/web": {
      "env": [
        "NEXT_PUBLIC_WEBSOCKET_URL",
        "NEXT_PUBLIC_BACKEND_URL",
        "GOOGLE_OAUTH_ID",
        "GOOGLE_OAUTH_SECRET"
      ]
    },
    "@poll/backend": {
      "env": ["NODE_ENV", "PORT", "HOST", "HOST_FRONTEND"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    }
  }
}
