{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "@poll/web": {
      "env": [
        "NEXT_PUBLIC_WEBSOCKET_URL",
        "NEXT_PUBLIC_BACKEND_URL",
        "GOOGLE_OAUTH_ID",
        "GOOGLE_OAUTH_SECRET",
        "NEXTAUTH_SECRET",
        "NEXT_PUBLIC_RECAPTCHA_SITE_KEY"
      ]
    },
    "@poll/backend": {
      "env": [
        "NODE_ENV",
        "PORT",
        "ORIGIN_URL",
        "FRONTEND_URL",
        "NEXTAUTH_SECRET",
        "STRIPE_SECRET_API_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_STANDARD_PLAN_PRODUCT_ID",
        "STRIPE_PREMIUM_PLAN_PRODUCT_ID",
        "RECAPTCHA_SECRET_TOKEN"
      ]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    }
  }
}
